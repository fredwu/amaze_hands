h1.rui-icon.rui-icon-left.rui-icon-calculator
  | Metrics for Every #{frequency} #{'Week'.pluralize(frequency)}

#charts role="tabpanel"
  ul.nav.nav-tabs role="tablist"
    li.active role="presentation"
      a href="#pricing" role="tab" data-toggle="tab"
        span#pricing-tab
        | Pricing
    li role="presentation"
      a href="#products" role="tab" data-toggle="tab"
        span#products-tab
        | Products
    li role="presentation"
      a href="#customers" role="tab" data-toggle="tab"
        span#customers-tab
        | Customers
  .tab-content
    #pricing.tab-pane.fade.active
      #chart-for-pricing
    #products.tab-pane.fade
      #chart-for-products
    #customers.tab-pane.fade
      #chart-for-customers

coffee:
  $ ->
    $('#charts a').click (e) ->
      e.preventDefault()
      $(this).tab('show')

    getMetrics 'pricing'
    getMetrics 'products'
    getMetrics 'customers'

  getMetrics = (name) ->
    tabSpinnerOpts =
      lines:  9
      length: 3
      width:  3
      radius: 4
      left:   '18px'

    $("#chart-for-#{name}").spin()
    $("##{name}-tab").spin(tabSpinnerOpts)

    $.get "/metrics?name=#{name}", (metrics) ->
      $("#chart-for-#{name}").spin(false)
      $("##{name}-tab").spin(false)

      chart = c3.generate
        bindto: "#chart-for-#{name}"
        data: metrics
        bar:
          width: 20
        grid:
          y:
            show: true
        axis:
          x:
            type: 'category'
            label:
              text: 'Calendar Weeks'
              position: 'outer-left'
          y:
            label:
              text: 'Days'
              position: 'outer-bottom'

      chart.hide()

      setTimeout ->
        chart.toggle 'Cycle Time (Mean)'

        setTimeout ->
          chart.toggle 'Wait Time (Mean)'

          setTimeout ->
            chart.toggle 'Cycle Time (Mean) Rolling'

            setTimeout ->
              chart.toggle ['UCL', 'CL', 'LCL']
            , 500
          , 500
        , 500
      , 500
